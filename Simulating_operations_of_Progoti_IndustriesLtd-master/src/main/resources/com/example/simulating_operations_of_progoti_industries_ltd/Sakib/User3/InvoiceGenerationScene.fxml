<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.simulating_operations_of_progoti_industries_ltd.Sakib.User3.InvoiceGenerationSceneController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="30.0" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Invoice Generation" />

        <TextField fx:id="orderIdField" promptText="Enter Order ID" />
        <TextField fx:id="customerNameField" promptText="Enter Customer Name" />
        <TextField fx:id="amountField" promptText="Enter Amount" />

        <Button fx:id="btnGenerateInvoice" text="Generate Invoice" />
        <Button fx:id="btnBackToDashboard" text="Back to Dashboard" />
    </VBox>

</AnchorPane>
