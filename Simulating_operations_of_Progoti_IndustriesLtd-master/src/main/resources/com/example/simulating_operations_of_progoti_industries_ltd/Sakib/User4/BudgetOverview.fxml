<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.simulating_operations_of_progoti_industries_ltd.Sakib.User4.BudgetOverviewController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="30.0" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Budget Overview" />

        <TableView fx:id="budgetOverviewTable">
            <TableColumn fx:id="departmentColumn" text="Department" />
            <TableColumn fx:id="allocatedAmountColumn" text="Allocated Amount" />
            <TableColumn fx:id="usedAmountColumn" text="Used Amount" />
        </TableView>

        <Button fx:id="btnAddNewBudget" text="Add New Budget" />
        <Button fx:id="btnUpdateBudget" text="Update Budget" />
        <Button fx:id="btnBackToDashboard" text="Back to Dashboard" />
    </VBox>

</AnchorPane>
