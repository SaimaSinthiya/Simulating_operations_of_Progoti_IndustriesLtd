<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.simulating_operations_of_progoti_industries_ltd.Sakib.User4.RiskAnalysisController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="30.0" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Risk Analysis" />

        <TableView fx:id="riskAnalysisTable">
            <TableColumn fx:id="riskIdColumn" text="Risk ID" />
            <TableColumn fx:id="descriptionColumn" text="Description" />
            <TableColumn fx:id="riskLevelColumn" text="Risk Level" />
            <TableColumn fx:id="mitigationPlanColumn" text="Mitigation Plan" />
        </TableView>

        <Button fx:id="btnAddNewRisk" text="Add New Risk" />
        <Button fx:id="btnUpdateRisk" text="Update Risk" />
        <Button fx:id="btnBackToDashboard" text="Back to Dashboard" />
    </VBox>

</AnchorPane>
