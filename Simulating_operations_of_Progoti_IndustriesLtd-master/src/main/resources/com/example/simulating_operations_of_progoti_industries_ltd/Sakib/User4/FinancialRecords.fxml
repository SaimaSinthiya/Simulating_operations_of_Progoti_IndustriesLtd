<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_progoti_industries_ltd.Sakib.User4.FinancialRecordsController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="20.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Financial Records" />

        <Button onAction="#addNewRecordButton" text="Add New Record" />
        <Button onAction="#updateRecordButton" text="Update Record" />
      <TableView fx:id="financialRecordsTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="recordIdColumn" prefWidth="75.0" text="Record ID" />
          <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
            <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
            <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Amount" />
            <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Description" />
        </columns>
      </TableView>
        <Button onAction="#backToDashboardButton" text="Back to Dashboard" />
    </VBox>

</AnchorPane>
