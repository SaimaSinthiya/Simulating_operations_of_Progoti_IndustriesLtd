<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_progoti_industries_ltd.Sakib.User4.PendingPaymentsController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="20.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Pending Payments" />

        <Button onAction="#markAsPaidButton" text="Mark as Paid" />
        <Button onAction="#exportPaymentsButton" text="Export Payments" />
      <TableView fx:id="pendingPaymentsTable" prefHeight="200.0" prefWidth="521.0">
        <columns>
          <TableColumn fx:id="paymentIdColumn" prefWidth="75.0" text="Payment ID" />
          <TableColumn fx:id="dueDateColumn" prefWidth="75.0" text="Due Date" />
            <TableColumn fx:id="amountColumn" prefWidth="75.0" text="Amount" />
            <TableColumn fx:id="statusColumn" prefWidth="75.0" text="Status" />
        </columns>
      </TableView>
        <Button onAction="#backToDashboardButton" text="Back to Dashboard" />
    </VBox>

</AnchorPane>
