<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="656.0" prefWidth="849.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_progoti_industries_ltd.SaimaSinthiya.User2.CustomerSupportController">
    <VBox alignment="CENTER" layoutX="200.0" layoutY="100.0" spacing="20.0">
        <Label fx:id="supportTitle" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Customer Support" />

        <Label fx:id="queryLabel" style="-fx-font-size: 18px;" text="Enter your query: " />
        <TextArea fx:id="queryTextArea" prefHeight="150.0" prefWidth="300.0" promptText="Describe your issue or request here..." style="-fx-font-size: 16px;" wrapText="true" />

        <Button fx:id="submitQueryButton" onAction="#handleSubmitQuery" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Submit Query" />

        <Button fx:id="backButton" onAction="#handleBack" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Back" />
    </VBox>

</AnchorPane>
